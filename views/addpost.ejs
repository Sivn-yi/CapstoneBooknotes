<%- include('partials/header.ejs'); -%>

    <div class="box">
      
        <form action="/submit" method="POST" >
          <div class="item">
            <h1 style="color: black;">Create new Book</h1>
          </div>
          <div class="item">
            <input type="text" name="bookTitle" class="" placeholder="Book Title" required>
          </div>
          <div class="item">
            <input type="text" name="bookAuthor" class="" placeholder="Book Author" required>
          </div>
          <div class="item">
            <input type="text" name="bookDate" class="" placeholder="Date Read" required>
          </div>
          <div class="item">
            <input type="text" name="bookRating" class="" placeholder="Book Rating" required>
          </div>
          <div class="item">
            <input type="text" name="bookISBN" class="" placeholder="Book ISBN" required>
          </div>
          <div class="item">
            <textarea type="text" name="bookIntro" class="" rows="14"  placeholder="Book Introduction" style="width: 100%; margin-right: 40px;"></textarea>
          </div>
          <div class="item">
            <input type="submit" class="" value="Post">
          </div>
        </form>
      

    </div>


<script>
    function handler(id) {
      document.getElementById("title" + id).setAttribute("hidden", true)
      document.getElementById("edit" + id).setAttribute("hidden", true)
      document.getElementById("done" + id).removeAttribute("hidden")
      document.getElementById("input" + id).removeAttribute("hidden")
    }
  </script>
