<%- include('partials/header.ejs'); -%>

    <div class="box">
      
        <form action="/edit" method="POST" >
          <div class="item">
            <h1 style="color: black;">Create new Book</h1>
          </div>
          <input type="hidden" name="bookId" value="<%= currentBook.id %>">
          <div class="item">
            <input type="text" name="bookTitle" class="" value="<%= currentBook.title %>" required>
          </div>
          <div class="item">
            <input type="text" name="bookAuthor" class="" value="<%= currentBook.author %>" required>
          </div>
          <div class="item">
            <input type="text" name="bookDate" class="" value="<%= currentBook.date_read %>" required>
          </div>
          <div class="item">
            <input type="text" name="bookRating" class="" value="<%= currentBook.rating %>" required>
          </div>
          <div class="item">
            <input type="text" name="bookISBN" class="" value="<%= currentBook.isbn %>" required>
          </div>
          <div class="item">
            <textarea type="text" name="bookIntro" class="" rows="14" style="width: 100%; margin-right: 40px;"><%= currentBook.notes %></textarea>
          </div>
          <div class="item">
            <input type="submit" class="" value="Post">
          </div>
        </form>
      

    </div>


<script>
    function handler(id) {
      document.getElementById("title" + id).setAttribute("hidden", true)
      document.getElementById("edit" + id).setAttribute("hidden", true)
      document.getElementById("done" + id).removeAttribute("hidden")
      document.getElementById("input" + id).removeAttribute("hidden")
    }
  </script>
